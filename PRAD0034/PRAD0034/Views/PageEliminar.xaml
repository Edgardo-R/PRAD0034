<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PRAD0034.Views.PageEliminar"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit">
    <ContentPage.Resources>
        <ResourceDictionary>
            <xct:ByteArrayToImageSourceConverter x:Key="ByteArrayToImageSourceConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout    BackgroundColor="PowderBlue">
            <Label Text="Eliminar un pago"
                   FontSize="18"
                   HorizontalOptions="Center"
                   VerticalOptions="Start"
                   TextColor="Black"/>
            <Entry  Placeholder="Id Pago"
                    x:Name="id_pago"
                    Keyboard="Numeric"
                    VerticalOptions="Start"
                    HorizontalOptions="Start"
                    Margin="25,10,5,5"
                    BackgroundColor="LightBlue"
                    TextColor="Black"/>
            <Button Text="Eliminar Pago"
                    x:Name="btn_eliminar"
                    TextColor="Black"
                    Margin="110,5,110,5"
                    Clicked="btn_eliminar_Clicked"/>
            <CollectionView x:Name="listaPagos"
                            Margin="25,5,25,5">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout  Orientation="Vertical"
                                        ItemSpacing="25"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout    BackgroundColor="LightBlue">
                            <Label  Text="{Binding Id_pago}"
                                    TextColor="Black"/>
                            <Label  Text="{Binding Descripcion}"
                                    TextColor="Black"/>
                            <Label  Text="{Binding Monto}"
                                    TextColor="Black"/>
                            <Label  Text="{Binding Fecha}"
                                    TextColor="Black"/>
                            <Image  HeightRequest="180"
                                    WidthRequest="180"
                                    HorizontalOptions="Start"
                                    Aspect="AspectFit"
                                    Source="{Binding Photo_recibo, Converter={StaticResource ByteArrayToImageSourceConverter}}"/>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>